@model IncubXpertInvoicing.Dl.Context.Order

@{
    ViewBag.Title = "Order Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="idOrderTable" style="width: 100%;" class="table table-condensed table-hover">
    <thead>
        <tr class="">
            <th>
                <a id="idAddOrder" href="/Order/OrderDetail"
                   title="Add New Order" class="btn btn-primary btn-sm">
                    <span class="fa fa-plus"></span>&nbsp&nbsp&nbspNew
                </a>
            </th>
            <th>
                Action
            </th>
            <th style="">
                @Html.Label("Order Id")
            </th>
            <th style="">
                @Html.Label("Order Date")
            </th>
            <th style="">
                @Html.Label("Customer Name")
            </th>
            <th style="">
                @Html.Label("Scheduled Delivery Date")
            </th>

        </tr>
    </thead>
    <tbody></tbody>
</table>


@section Scripts {
    @Scripts.Render("~/Views/Order/OrderSearch.js")
}
